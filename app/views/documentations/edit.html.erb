<div id="documentation_wrap">

<h1>Editing documentation</h1>

<%= error_messages_for :documentation %>

<% form_for(@documentation) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :cols=>110, :rows=>25 %>
  </p>

  <p>
    <b>Published</b><br />
    <%= f.check_box :published %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @documentation %> |
<%= link_to 'Back', documentations_path %>
</div>