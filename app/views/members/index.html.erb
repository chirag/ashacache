<div id="memberEditWrap">

<h1>Members with hunts</h1>
<ul id="memberList">
<% for member in @members %>
	<% if !member.hunts.empty? or admin? %>
	<li><%=h member.name %>
    
		<% if admin? %>
			</li>
			<li><%= link_to 'Show', member %></li>
		    <li><%= link_to 'Edit', edit_member_path(member) %></li>
		    <li><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %>
		<% end %>
		
			<ul class='huntList'>
			<% for hunt in member.hunts #Remember a member 'has many' hunts  %>
			 <li><%= link_to hunt.name, hunt_path(hunt) %></li>
			<% end %>
			</ul>		
	</li>
	<% end %>
<% end %>
</ul>
</div>
